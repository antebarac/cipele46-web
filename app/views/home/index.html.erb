<%= render 'application/left_navigation' %>

<div class="page-content">
    <header class="page-content-header clearfix">
        <ul class="breadcrumbs clearfix">
            <li><a href="#">Namještaj</a></li>
            <li><span>Koprivničko-križevačka županija</span></li>
        </ul>
        <div class="cards-counter clearfix"><strong>315</strong> oglasa</div>
    </header>

    <section class="cards-board clearfix">

        <% @ads.each do |ad| %>
          <article class="card giving" data-details="card_detail.html">
              <figure class="icon window-2">
                <% if ad.image.url %>
                  <%= image_tag ad.image.url(:small) %>
                <% end -%>
              </figure>
              <h2><%= link_to ad.title, ad_path(ad) %></h2>
              <p><%= ad.description %></p>
              <footer>
                  <span class="card-place icon stroke location"><%= ad.city.region.name %></span>
                  <span class="card-category icon stroke category"><%= ad.category.name %></span>
                  <span class="card-time icon stroke time"><%= time_ago_in_words ad.expires_at %></span>
                  <% if current_user %><a href="#" class="card-favorite selected" title="Makni iz favorita" data-add="Dodaj u favorite" data-remove="Makni iz favorita"></a><% end -%>
              </footer>
          </article>
        <% end -%>

    </section>

    <footer class="page-content-footer clearfix">
        <%= paginate @ads  %>
    </footer>
</div>

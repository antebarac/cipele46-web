<%= render 'application/left_navigation' %>

<div class="page-content">
    <header class="page-content-header clearfix">
        <ul class="breadcrumbs clearfix">
            <li><a href="#">Namještaj</a></li>
            <li><span>Koprivničko-križevačka županija</span></li>
        </ul>
        <div class="cards-counter clearfix"><strong>315</strong> oglasa</div>
    </header>

    <section class="cards-board clearfix">
        
        <% @ads.each do |ad| %>
          <article class="card giving" data-details="card_detail.html">
              <figure class="icon window-2">
                <% if ad.image.url %>
                  <%= image_tag ad.image.url(:small) %>
                <% end -%>
              </figure>
              <h2><a href="card_detail.html"><%= ad.title %></a></h2>
              <p><%= ad.description %></p>
              <footer>
                  <span class="card-place icon stroke location">Koprivničko-križevačka županija</span>
                  <span class="card-category icon stroke category">Namještaj</span>
                  <span class="card-time icon stroke time">21 dan</span>
                  <a href="#" class="card-favorite selected" title="Makni iz favorita" data-add="Dodaj u favorite" data-remove="Makni iz favorita"></a>
              </footer>
          </article>
        <% end -%>

    </section>

    <footer class="page-content-footer clearfix">
        <%= paginate @ads  %>
    </footer>
</div>

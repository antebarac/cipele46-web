<div class="page-content-wrapper inner-page giving clearfix">
  <aside class="sidebar-wrapper">
    <div class="page-sidebar">
      <h3>Kontakt</h3>
      <p class="sidebar-number">099 232 456</p>
      <form>
        <p class="sidebar-input-description">Poruka</p>
        <textarea rows="8" name="sidebar-texarea" placeholder="Upiši poruku"></textarea>
        <p class="sidebar-input-description-email">Email adresa na koju želite dobiti odgovor</p>
        <input id="q" name="q" type="email" title="email" placeholder="Upiši email"/>
        <a href="#" class="sidebar-button" type="submit" title="Pošalji">Pošalji upit</a>
      </form>
    </div>
    <div class="page-sidebar">
      <h3>Kontakt</h3>
      <p class="sidebar-number">099 232 456</p>
      <p class="sidebar-email">ivan@cipelic.com</p>
      <a style="margin-top:44px;" href="#" class="sidebar-button-gray" type="submit" title="Pošalji">Uredi oglas</a>
      <a href="#" class="sidebar-button-gray" type="submit" title="Pošalji">Zatvori oglas</a>
      <p class="sidebar-button-description">Zatvoren oglas je rješen i ne vidi se u kategorijama ili tražilici</p>
      <a style="margin-top:34px;" href="#" class="sidebar-button-gray" type="submit" title="Pošalji">Obriši oglas</a>
    </div>
  </aside>
  <div class="page-content">
    <header class="page-content-header clearfix">
      <ul class="breadcrumbs clearfix">
        <li>@TODO - izvući u partial!</li>
        <li><a href="#">Namještaj</a></li>
        <li><span>Koprivničko-križevačka županija</span></li>
      </ul>
    </header>
    <section class="page-content-container clearfix">
      <article class="card-details">
        <header>
          <h2><%= @ad.title %></h2>
          <span class="card-place icon stroke location"><%= @ad.city.region.name %>, <%= @ad.city.name %></span>
          <span class="card-category icon stroke category"><%= @ad.category.name %></span>
          <span class="card-time icon stroke time"><%= time_ago_in_words @ad.expires_at %></span>
          <% if current_user %>
            <%= link_to "&#xE0B5;".html_safe, toggle_path(@ad.id), add: 'Dodaj u favorite', remove: 'Makni iz favorita', card: @ad.id, :class => 'card-favorite selected' %>
            <%= link_to "&#xE49D;".html_safe, toggle_path(@ad.id), add: 'Dodaj u favorite', remove: 'Makni iz favorita', card: @ad.id, :class => 'card-favorite' %>
            <a href="#" class="card-favorite selected" title="Makni iz favorita" data-add="Dodaj u favorite" data-remove="Makni iz favorita"></a>
          <% end %>
        </header>
        <figure class="icon window-2"><%= image_tag @ad.image.url(:medium) %></figure>
        <p><%= @ad.description %></p>
      </article>
    </section>
  </div>
</div>
